<?xml version="1.0" encoding="UTF-8"?>
<!-- author :
                Gennady Movila  -->
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="DEV_HOME" value="/logs/${springAppName}"/>
    <!-- dev profile -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <property name="CONSOLE_LOG_FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %thread] %-5level %logger{36} - %msg%n"/>
    <springProfile name="dev">

        <appender name="SOUT-ROOT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>DEBUG</level>
            </filter>
            <encoder>
                <pattern>${CONSOLE_LOG_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>


        <root level="DEBUG">
            <appender-ref ref="SOUT-ROOT"/>
        </root>

    </springProfile>

    <!-- prod profile -->
    <springProfile name="prod">
        <appender name="root_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${DEV_HOME}/info.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${DEV_HOME}/archived/info.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${CONSOLE_LOG_FILE_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <appender name="root_debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${DEV_HOME}/debug.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${DEV_HOME}/archived/debug.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${CONSOLE_LOG_FILE_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <appender name="root_warn" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${DEV_HOME}/warn.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${DEV_HOME}/archived/warn.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${CONSOLE_LOG_FILE_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <appender name="root_trace" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${DEV_HOME}/trace.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${DEV_HOME}/archived/trace.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${CONSOLE_LOG_FILE_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <appender name="root_error" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${DEV_HOME}/error.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${DEV_HOME}/archived/error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${CONSOLE_LOG_FILE_PATTERN}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <root level="ERROR">
            <appender-ref ref="root_error"/>
        </root>
    </springProfile>
</configuration>